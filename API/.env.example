# WhatShouldIDo API Environment Configuration
# Copy this to .env and fill in your actual values

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=WhatShouldIDo
DATABASE_USER=whatshouldido
DATABASE_PASSWORD=your_secure_password_here

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External API Keys
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENTRIPMAP_API_KEY=REMOVED_OPENTRIPMAP_KEY

# JWT Configuration
JWT_SECRET_KEY=your_super_secure_jwt_key_here_minimum_32_characters
JWT_ISSUER=WhatShouldIDo
JWT_AUDIENCE=WhatShouldIDoClients
JWT_EXPIRY_MINUTES=60

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5296

# Logging
LOG_LEVEL=Information

# Feature Flags
HYBRID_PLACES_ENABLED=true
PERSONALIZATION_ENABLED=true
CONTEXT_ENGINE_ENABLED=true

# Rate Limiting
FREE_TIER_DAILY_LIMIT=100
PRO_TIER_DAILY_LIMIT=1000
BUSINESS_TIER_DAILY_LIMIT=10000