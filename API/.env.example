# WhatShouldIDo Production Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_CONNECTION_STRING=Server=db;Database=WhatShouldIDo;User Id=sa;Password=YOUR_STRONG_DB_PASSWORD;TrustServerCertificate=True;Encrypt=True;Max Pool Size=100;Min Pool Size=5;Connection Timeout=30;Command Timeout=30;

# SQL Server SA Password
SQL_SA_PASSWORD=YOUR_STRONG_DB_PASSWORD

# Redis Configuration
REDIS_CONNECTION_STRING=redis:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# External API Keys
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
OPENTRIPMAP_API_KEY=your_opentripmap_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# JWT Security
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters_here

# Monitoring (Optional)
SEQ_SERVER_URL=http://seq:5341

# Domain Configuration
DOMAIN_NAME=yourdomain.com
SSL_EMAIL=your-email@yourdomain.com

# Additional Security
ASPNETCORE_HTTPS_PORT=443
ASPNETCORE_FORWARDEDHEADERS_ENABLED=true